{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Cargo cross-compile build",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--release",
				"--target=arm-unknown-linux-gnueabihf"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Copy to Raspberry Pi",
			"type": "shell",
			"command": "robocopy /NFL /NDL /NJH /NJS /nc /ns /np target/arm-unknown-linux-gnueabihf/release P:/ motion_sensor_lifx; True",
			"dependsOn": [
				"Cargo cross-compile build"
			]
		},
		{
			"label": "Run on Raspberry Pi",
			"type": "shell",
			"command": "ssh -t pi@raspi \"sudo ~/motion_sensor_lifx\"",
			"dependsOn": [
				"Copy to Raspberry Pi"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
	]
}