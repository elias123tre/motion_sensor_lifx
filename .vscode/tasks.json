{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Cargo build",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--release",
				"--target=arm-unknown-linux-gnueabihf"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Cargo remote test",
			"type": "shell",
			"command": "cargo test",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
	]
}